<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.EditarPerfilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Perfil"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" />

        <!-- Nombre -->
        <TextView
            android:id="@+id/tv_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu nombre"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre"
            android:layout_marginBottom="16dp" />

        <!-- Ubicación -->
        <TextView
            android:id="@+id/tv_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_nombre"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_ubicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu ubicación"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ubicacion"
            android:layout_marginBottom="16dp" />

        <!-- Profesión -->
        <TextView
            android:id="@+id/tv_profesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesión:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_ubicacion"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_profesion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu profesión"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_profesion"
            android:layout_marginBottom="16dp" />

        <!-- Compañía -->
        <TextView
            android:id="@+id/tv_compania"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compañía:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_profesion"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_compania"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu compañía"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_compania"
            android:layout_marginBottom="16dp" />

        <!-- Teléfono -->
        <TextView
            android:id="@+id/tv_telefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/et_compania"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_telefono"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Ingresa tu teléfono"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_telefono"
            android:layout_marginBottom="24dp" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:textAllCaps="false"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/et_telefono"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
